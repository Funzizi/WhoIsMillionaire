<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/blue_100"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/tv_showCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn muốn gọi cho ai?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageButton
        android:id="@+id/imb_Messi"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_showCall"
        android:layout_centerHorizontal="true"
        android:src="@drawable/messi"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imb_Messi"
        android:layout_centerHorizontal="true"
        android:text="Messi"
        />

    <ImageButton
        android:id="@+id/imb_Mark"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_showCall"
        android:src="@drawable/mark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imb_Mark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="Mark"
        />

    <ImageButton
        android:id="@+id/imb_Trump"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_showCall"
        android:src="@drawable/trump"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imb_Trump"
        android:layout_marginLeft="35dp"
        android:text="Trump"
        />

</RelativeLayout>