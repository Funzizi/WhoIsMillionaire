<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".controller.MenuActivity">

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Menu"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Bắt đầu"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/background_answer_when_click"
        />

    <Button
        android:id="@+id/bt_history"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_below="@+id/bt_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Điểm cao"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/background_answer_when_click"
        />

    <ImageButton
        android:id="@+id/imb_sound_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sound_on"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        />
</RelativeLayout>