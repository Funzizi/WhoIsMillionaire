    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_start"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/rl_question">

        <ImageView
            android:id="@+id/imv_start_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_help"
            android:src="@mipmap/call" />

        <Button
            android:id="@+id/bt_start_5050"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/imv_start_call"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_help"
            android:text="50:50" />

        <ImageView
            android:id="@+id/imv_start_person"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imv_start_call"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_help"
            android:src="@mipmap/person" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:textAllCaps="false"
        />

</RelativeLayout>